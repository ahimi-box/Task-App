<%= form_with(model: [@user,@task], local: true) do |f| %>
  <%= render 'shared/error_messages', object: @task %>
  
  <%= f.label "名称", class: "lable-#{yield(:class_text)}" %>
  <%= f.text_field :name, class: "form-control" %>
  
  <%= f.label "詳細", class: "lable-#{yield(:class_text)}" %>
  <%= f.text_area :description,  class: "form-control" %>
  
  <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg btn-#{yield(:class_text)}" %>

<% end %>
